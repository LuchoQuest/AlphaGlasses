<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E91E63"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/flecha"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/flecha_icon" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Registro Llamadas"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Card diseño -->
        <LinearLayout
            android:id="@+id/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/registro_llamada_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="15dp">

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/card_estilo_llamadas"
                android:elevation="28dp"
                android:layout_gravity="center_horizontal">

                <!-- Contenedor para la imagen y el texto -->
                <LinearLayout
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_especificaciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Especificaciones"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_cuerpo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!-- Imagen a la izquierda -->
                    <ImageView
                        android:id="@+id/image_card"
                        android:layout_width="100dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:src="@drawable/incoming_call" />

                    <!-- Texto a la derecha -->
                    <TextView
                        android:id="@+id/text_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing." />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <!-- Card diseño -->
        <LinearLayout
            android:id="@+id/Card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#F8F8F8"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/card_estilo_llamadas"
                android:layout_gravity="center_horizontal">

                <!-- Contenedor para la imagen y el texto -->
                <LinearLayout
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_especificaciones1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Especificaciones"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_cuerpo1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!-- Imagen a la izquierda -->
                    <ImageView
                        android:id="@+id/image_card1"
                        android:layout_width="100dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:src="@drawable/incoming_call" />

                    <!-- Texto a la derecha -->
                    <TextView
                        android:id="@+id/text_card1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing." />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|end">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_background"
                app:menu="@menu/bottom_navigation_menu" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
